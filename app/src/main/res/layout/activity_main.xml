<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:src="@drawable/bgloginscreen"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/login"
        android:scaleType="fitCenter"
        android:layout_above="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Password"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textColorHint="#b5dcff"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:textStyle="italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginbutton"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Don&apos;t have an account?"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#fffbf8"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Create One "
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/loginbutton"
        android:textStyle="bold"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Here"
        android:id="@+id/textView4"
        android:textColor="#0015ff"
        android:textColorLink="#0007ff"
        android:textStyle="bold|italic"
        android:clickable="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="215dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Email"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textColorHint="#b5dcff"
        android:textStyle="italic"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/loginbutton"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0f00"
        android:textSize="20dp" />

</RelativeLayout>
